// This is the motor control with the ideal that a H-bridge will be used.


int L_m_fwd_pin = 3;  // Left Motor Fwd  //Arbitrary pin numbers
int L_m_rev_pin = 4;  // Left motor Reverse
int R_m_fwd_pin = 5;  // Right motor FWD
int R_m_rev_pin = 6;  // Right motor Reverse


void setup() {
  // put your setup code here, to run once:
}

void loop() {
  // put your main code here, to run repeatedly:
Motor(-255);
  
}

void Motor(int SPEED) {
  pinMode(L_m_fwd_pin, OUTPUT); // Sets the pins to the right mode
  pinMode(L_m_rev_pin, OUTPUT);
  pinMode(R_m_fwd_pin, OUTPUT);
  pinMode(R_m_rev_pin, OUTPUT);

  if (abs(SPEED) > 128) {  // limiting max speed to 50%
    return ; // Insures values speed is a valid int
  }
  else if(SPEED >= 0){ 
    analogWrite(L_m_fwd_pin, SPEED);
    analogWrite(R_m_fwd_pin, SPEED);
    analogWrite(L_m_rev_pin, 0);
    analogWrite(R_m_rev_pin, 0);
  }
  else{ //SPEED < 0
    analogWrite(L_m_fwd_pin, 0);
    analogWrite(R_m_fwd_pin, 0);
    analogWrite(L_m_rev_pin, SPEED);
    analogWrite(R_m_rev_pin, SPEED);
  }


}
